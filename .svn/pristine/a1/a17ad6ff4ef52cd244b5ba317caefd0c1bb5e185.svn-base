    public class CommonJob : IJob
    {
        public ICrawler Crawler {get; set;}

        public CommonJob(ICrawler crawler){
            Crawler = crawler;
        }

        public void Execute(IJobExecutionContext context)
        {
            Crawler.Run();
        }
        
    }

